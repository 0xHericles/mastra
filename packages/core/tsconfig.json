{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "src",
    "types"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "rootDir": "./src",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "sourceMap": true,
  }
}